<FindBugsFilter
        xmlns="https://github.com/spotbugs/filter/3.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://github.com/spotbugs/filter/3.0.0 https://raw.githubusercontent.com/spotbugs/spotbugs/3.1.0/spotbugs/etc/findbugsfilter.xsd">

     <!-- There is a large number of FindBugs warnings in the generated code
     -->
     <Match>
         <Or>
            <Bug pattern="DLS_DEAD_LOCAL_STORE" />
            <Bug pattern="EI_EXPOSE_REP" />
            <Bug pattern="EI_EXPOSE_REP2" />
            <Bug pattern="MS_EXPOSE_REP" />
            <Bug pattern="MS_SHOULD_BE_FINAL" />
            <Bug pattern="NM_FIELD_NAMING_CONVENTION" />
            <Bug pattern="SING_SINGLETON_IMPLEMENTS_SERIALIZABLE" />
            <Bug pattern="UCF_USELESS_CONTROL_FLOW" />
            <Bug pattern="URF_UNREAD_FIELD" />
            <Bug pattern="UC_USELESS_VOID_METHOD" />
         </Or>
     </Match>

     <!-- Match all RV_RETURN_VALUE_IGNORED_BAD_PRACTICE violations on all unit
        test files since Mockito usage can cause this violation when stating
        expectations.
     -->
     <Match>
         <Or>
            <Bug pattern="RV_RETURN_VALUE_IGNORED_BAD_PRACTICE" />
            <Bug pattern="RV_RETURN_VALUE_IGNORED_NO_SIDE_EFFECT" />
            <Bug pattern="RR_NOT_CHECKED" />
            <Bug pattern="SR_NOT_CHECKED" />
         </Or>
         <Or>
            <Class name="~.*\.[^\.]+Test" />
            <Class name="~.*\.[^\.]+Test\$.*" />
            <Class name="~.*\.[^\.]+TestPerf" />
            <Class name="~.*\.[^\.]+TestPerf\$.*" />
            <Class name="~.*\.[^\.]+IT" />
            <Class name="~.*\.[^\.]+IT\$.*" />
            <Class name="~.*\.[^\.]+ITPerf" />
            <Class name="~.*\.[^\.]+ITPerf\$.*" />
         </Or>
     </Match>

     <Match>
         <Or>
            <Source name="~.*generated.*" />
         </Or>
     </Match>
</FindBugsFilter>
